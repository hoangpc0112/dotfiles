{
  "github.copilot.nextEditSuggestions.enabled": true,
  "workbench.startupEditor": "none",
  "workbench.colorTheme": "Tokyo Night",
  "workbench.iconTheme": "material-icon-theme",
  "window.menuBarVisibility": "compact",
  "window.commandCenter": false,
  "workbench.layoutControl.enabled": false,
  "chat.commandCenter.enabled": false,
  "workbench.statusBar.visible": false,
  "files.autoSave": "onFocusChange",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "JetBrainsMono Nerd Font",
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.fontSize": 16,
  "explorer.confirmDragAndDrop": false,
  "editor.minimap.enabled": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "explorer.confirmDelete": false,
  "editor.fontWeight": "500",
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.fontWeight": "500",
  "breadcrumbs.enabled": false,
  "javascript.suggest.paths": false,
  "typescript.suggest.paths": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "terminal.integrated.suggest.enabled": true,
  "explorer.compactFolders": false,
  "github.copilot.chat.commitMessageGeneration.instructions": [
    { "text": "Use conventional commit message format" },
    { "text": "Use the imperative mood" },
    { "text": "Description should be 50 characters or less" },
    {
      "text": "Detail the changes for each file using a separate line or bullet point, e.g., '- <full_path>:\n    + <description of change>'"
    }
  ],
  "codesnap.containerPadding": "1em",
  "codesnap.showWindowControls": false,
  "codesnap.backgroundColor": "#00000000",
  "codesnap.boxShadow": "rgba(0, 0, 0, 0.55) 0px 5px 10px",
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },
  "emmet.triggerExpansionOnTab": true,
  "editor.wordWrap": "bounded"
}
